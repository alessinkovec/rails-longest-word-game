<h1>New game</h1>
<p><%= @letters %></p>
<div class="form">
  <p>What is the longest word you can find?</p>
  <form action="/score" method="post" class="form-inline">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <input id="letters" name="letters" value="<%= @letters.join %>" type="hidden">
    <input id="start_time" name="start_time" value="<%= Time.now.to_i %>" type="hidden">
    <input type="text" name="attempt" placeholder="Try like a fool, brah" class="form-control form-control-lg">
    <input type="submit" value="Play" class="btn btn-primary">
  </form>
</div>
